//
// A sample particle configuration file
//

// This is a 2d simulation
Dimensions: 2

// Set the simulation bounds
Bounds: {
  : -2, 2 // X
  : -2, 2 // Y
}

// Set the number of particle types
NTypes: 1

// Choose the type of integrator
Integrator: VelocityVerlet

Force-grid: {
  : 0, 0, HardSphere
}

// Fill an area with particles
Fill-area: {
  // Fill all the simulation with particles
  Bounds: {
    : -2, 2
    : -2, 2
  }

  // All particles are of type 0
  Type: 0, 100% 

  // All particles have the same radius
  Radius: Homogeneous=0.05

  // Set the number by filling to a perscribed density
  Number: Phi=0.5

  // Set the mass by 
  Mass: Density=1
}

Particles: x[0], x[1], v[0], v[1], density=1, sigma=0.05 {
  : 0.02, 5.1, 0, 0.1
  : 1.2,  3.3, 1.1, 0.0
}
